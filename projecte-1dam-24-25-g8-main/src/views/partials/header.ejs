              <i class="fas fa-clipboard-list me-1"></i>Actuacions
            </a>
          </li>   
          <li class="nav-item">
            <a class="nav-link <%= title.includes('Admin') ? 'active' : '' %>" href="/admin/control-panel">
              <i class="fas fa-user-shield me-1"></i>Admin
            </a>
          </li>      
        </ul>
      </div>
    </div>
  </nav>

